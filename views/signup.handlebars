<div class="row">
  <div class="col-md-6">
    <h2>Signup</h2>

      <form class="form signup-form">
        <div class="form-group mt-3">
          <label for="name-signup">name:</label>
          <input type="text" class="form-input" id="name-signup" aria-describedby="nameHelp" placeholder="Enter name">
        </div>
        <div class="form-group mt-3">
          <label for="email-signup">email:</label>
          <input type="text" class="form-input" id="email-signup" placeholder="example@domain.com">
        </div>
          <div class="form-group mt-3">
          <label for="password-signup">password:</label>
          <input type="password" class="form-input" id="password-signup" placeholder="password">
        </div>
        <button type="submit" class="btn btn-primary mt-3">signup</button>
      </form>
  </div>
</div>




<script src="./js/signup.js"></script>